{
  "name": "telegram-bot-developer",
  "version": "0.1.0",
  "description": "Telegram bot that uses Claude to make code changes, commit, and deploy",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "node --env-file=.env --watch src/index.ts",
    "start": "node --env-file=.env src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run typecheck && npm run test"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@hono/node-server": "^1.19.9",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@playwright/mcp": "^0.0.64",
    "better-sqlite3": "^12.6.2",
    "grammy": "^1.40.0",
    "hono": "^4.11.9",
    "nanoid": "^5.1.5",
    "pino": "^10.3.1",
    "simple-git": "^3.30.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.0.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
